# OpenOutreach API Configuration

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# CORS Settings (comma-separated origins)
ALLOWED_ORIGINS=*

# Logging
LOG_LEVEL=INFO

# Campaign Defaults
DEFAULT_CAMPAIGN_NAME=connect_follow_up
MAX_URLS_PER_REQUEST=100

# Security (add in production)
# API_KEY=your-secret-api-key
# JWT_SECRET=your-jwt-secret

# OpenAI
OPENAI_API_KEY=

# ── BrightData Proxy ──────────────────────────────────────────
# Shared proxy server for all zones
BRIGHTDATA_SERVER=http://brd.superproxy.io:33335

# Zone 1: US-locked (linkedin_scraper1)
# Used when region="us" (default)
BRIGHTDATA_US_USERNAME=brd-customer-xxx-zone-linkedin_scraper1
BRIGHTDATA_US_PASSWORD=your_password_here

# Zone 2: International / flexible country (linkedin_scraper2)
# Used for all other regions — country is appended at runtime e.g. -country-gb
BRIGHTDATA_INTL_USERNAME=brd-customer-xxx-zone-linkedin_scraper2
BRIGHTDATA_INTL_PASSWORD=your_password_here